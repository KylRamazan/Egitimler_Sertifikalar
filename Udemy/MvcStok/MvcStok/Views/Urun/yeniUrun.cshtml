@model MvcStok.Models.Entity.TblUrunler
@{
    ViewBag.Title = "yeniUrun";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    <h2>Yeni Ürün Ekleme</h2><br />
    <label>Ürün Ad :</label><br />
    @Html.TextBoxFor(x => x.AD, new { @class = "form-control" })<br />
    <label>Marka :</label><br />
    @Html.TextBoxFor(x => x.MARKA, new { @class = "form-control" })<br />
    <label>Stok :</label><br />
    @Html.TextBoxFor(x => x.STOK, new { @class = "form-control" })<br />
    <label>Alış Fiyat :</label><br />
    @Html.TextBoxFor(x => x.ALISFIYAT, new { @class = "form-control" })<br />
    <label>Satış Fiyat :</label><br />
    @Html.TextBoxFor(x => x.SATISFIYAT, new { @class = "form-control" })<br />
    <label>Kategori :</label><br />
    @Html.DropDownListFor(x => x.TblKategoriler.ID, (List<SelectListItem>)ViewBag.deger, new { @class = "form-control" })<br />
    <button class="btn btn-info">Kaydet</button>
</form> 