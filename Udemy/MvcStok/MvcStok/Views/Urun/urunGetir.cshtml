@model MvcStok.Models.Entity.TblUrunler
@{
    ViewBag.Title = "urunGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("urunGuncelle", "Urun", FormMethod.Post))
{
    <h2>Ürün Güncelleme</h2>
    <br />
    <label>Ürün Ad :</label>
    <br />
    @Html.TextBoxFor(x => x.AD, new { @class = "form-control" })
    <br />

    <label>Marka :</label>
    <br />
    @Html.TextBoxFor(x => x.MARKA, new { @class = "form-control" })
    <br />

    <label>Stok :</label>
    <br />
    @Html.TextBoxFor(x => x.STOK, new { @class = "form-control" })
    <br />

    <label>Alış Fiyat :</label>
    <br />
    @Html.TextBoxFor(x => x.ALISFIYAT, new { @class = "form-control" })
    <br />

    <label>Satış Fiyat :</label>
    <br />
    @Html.TextBoxFor(x => x.SATISFIYAT, new { @class = "form-control" })
    <br />

    <label>Kategori :</label>
    <br />
    @Html.DropDownListFor(x => x.TblKategoriler.ID, (List<SelectListItem>)ViewBag.ktgr, new { @class = "form-control" })
    <br />

    @Html.HiddenFor(x => x.ID, new { @class = "form-control" })
    <button class="btn btn-success">Güncelle</button>
}