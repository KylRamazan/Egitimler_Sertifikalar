@model MvcStok.Models.Entity.TblKategoriler
@{
    ViewBag.Title = "kategoriGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("kategoriGuncelle", "Kategori", FormMethod.Post))
{
    <h2>Kategori Güncelleme</h2><br />
    <label>Kategori Ad :</label><br />
    @Html.TextBoxFor(x=>x.AD,new { @class="form-control"})<br />
    @Html.HiddenFor(x=>x.ID,new { @class="form-control"})
    <button class="btn btn-success">Güncelle</button>
}