@using OgrenciNotMvc.Models.EntityFramework
@model List<TblDersler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>DERS ID</th>
        <th>DERS ADI</th>
        <th>İŞLEMLER</th>
    </tr>
    <tbody>
        @foreach(var ders in Model)
        {
        <tr>
            <td>@ders.DERSID</td>
            <td>@ders.DERSAD</td>
            <td><a href="/Default/dersSil/@ders.DERSID" class="btn btn-danger">Sil</a> &nbsp;&nbsp;&nbsp;
            <a href="/Default/dersGetir/@ders.DERSID" class="btn btn-success">Güncelle</a></td>
        </tr>
        }
    </tbody>
</table>
<a href="/Default/yeniDers" class="btn btn-primary">Yeni Ders Kaydı</a>

