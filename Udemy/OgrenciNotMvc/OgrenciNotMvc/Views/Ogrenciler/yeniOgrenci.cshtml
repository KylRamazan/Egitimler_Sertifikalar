@model OgrenciNotMvc.Models.EntityFramework.TblOgrenciler
@{
    ViewBag.Title = "yeniOgrenci";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" class="form-group">
    <div>
        <label>Öğrenci Ad :</label>
        <input type="text" class="form-control" name="OGRAD" />
    </div>

    <div style="margin-top:20px">
        <label>Öğrenci Soyad :</label>
        <input type="text" class="form-control" name="OGRSOYAD" />
    </div>

    <div style="margin-top:20px">
        <label>Öğrenci Fotoğraf :</label>
        <input type="text" class="form-control" name="OGRFOTOGRAF" />
    </div>

    <div style="margin-top:20px">
        <label>Öğrenci Cinsiyet :</label>
        <input type="text" class="form-control" name="OGRCINSIYET" />
    </div>

    <div style="margin-top:20px">
        <label>Öğrenci Kulüp :</label>
        @Html.DropDownListFor(m=>m.TblKulupler.KULUPID,(List<SelectListItem>)ViewBag.deger,"Kulüp Seçiniz...",new { @class="form-control"})
    </div>

    <div style="margin-top:10px">
        <button class="btn btn-info">Öğrenci Ekle</button>
    </div>
</form>

