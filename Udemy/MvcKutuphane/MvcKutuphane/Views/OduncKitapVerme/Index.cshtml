@using MvcKutuphane.Models.Entity
@model List<TblHareketler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ödünç Kitap Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>İŞLEM</th>
        <th>KİTAP</th>
        <th>ÜYE</th>
        <th>PERSONEL</th>
        <th>ALIŞ TARİHİ</th>
        <th>İADE TARİHİ</th>
        <th>İADE AL</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.TblKitaplar.AD</td>
            <td>@x.TblUyeler.AD @x.TblUyeler.SOYAD</td>
            <td>@x.TblPersoneller.AD @x.TblPersoneller.SOYAD</td>
            <td>@Convert.ToDateTime(x.ALISTARIH).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(x.IADETARIH).ToString("dd/MM/yyyy")</td>
            <td><a href="/OduncKitapVerme/oduncIade/@x.ID" class="btn btn-warning">Kitabı İade Et</a></td>
        </tr>
    }
</table>