@model MvcKutuphane.Models.Entity.TblHareketler
@{
    ViewBag.Title = "oduncVer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form class="form-group" method="post">
    <div style="margin-top:15px;">
        <label>Üye ID :</label><br />
        @Html.DropDownListFor(x => x.TblUyeler.ID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
        <br />
        <label>Kitap ID :</label><br />
        @Html.DropDownListFor(x => x.TblKitaplar.ID, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
        <br />
        <label>Personel ID :</label><br />
        @Html.DropDownListFor(x => x.TblPersoneller.ID, (List<SelectListItem>)ViewBag.dgr3, new { @class = "form-control" })
        <br />
        <label>Kitap Alış Tarihi :</label><br />
        <input type="text" class="form-control" name="ALISTARIH" value="@DateTime.Now.ToShortDateString()" />
        <br />
        <label>Kitap İade Tarihi :</label><br />
        <input type="text" class="form-control" name="IADETARIH" value="@DateTime.Now.AddDays(7).ToShortDateString()" />
    </div>
    <div style="margin-top:20px;">
        <button class="btn btn-primary">Kitabı Ödünç Ver</button>
    </div>
</form>