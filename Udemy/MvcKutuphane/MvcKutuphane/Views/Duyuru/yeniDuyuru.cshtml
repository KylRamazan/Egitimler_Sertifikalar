@model MvcKutuphane.Models.Entity.TblDuyurular
@{
    ViewBag.Title = "yeniDuyuru";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form class="form-group" method="post">
    <div style="margin-top:15px;">
        <label>Başlık :</label><br />
        @Html.TextBoxFor(x => x.KATEGORI, new { @class = "form-control" })
        <br/>
        <label>İçerik :</label><br />
        @Html.TextBoxFor(x => x.ICERIK, new { @class = "form-control" })
        <br />
        <label>Tarih :</label><br />
        @Html.TextBoxFor(x => x.TARIH, new { @class = "form-control" })
    </div>
    <div style="margin-top:20px;">
        <button class="btn btn-info">Duyuru Ekle</button>
    </div>
</form>