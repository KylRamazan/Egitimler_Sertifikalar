@using MvcKutuphane.Models.Entity
@model List<TblHareketler>
@{
    ViewBag.Title = "Kitaplarim";
    Layout = "~/Views/Shared/_LayoutPanelim.cshtml";
}
<br />
<h2>Kitap Geçmişi</h2>
<br />

<table class="table table-bordered">
    <tr>
        <th>KİTAP</th>
        <th>ALIŞ TARİHİ</th>
        <th>TESLİM TARİHİ</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.TblKitaplar.AD</td>
            <td>@Convert.ToDateTime(x.ALISTARIH).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(x.UYETESLIMTARIH).ToString("dd/MM/yyyy")</td>
        </tr>
    }
</table>