@using MvcKutuphane.Models.Entity
@model List<TblKitaplar>
@{
    ViewBag.Title = "yazarKitaplar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2>@ViewBag.deger</h2>
<br />
<table class="table table-striped">
    <tr>
        <th>ID</th>
        <th>KİTAP ADI</th>
        <th>KATEGORİ</th>
        <th>YAYINEVİ</th>
    </tr>
    @foreach(var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.AD</td>
            <td>@x.TblKategoriler.AD</td>
            <td>@x.YAYINEVI</td>
        </tr>
    }
</table>