@using MvcKutuphane.Models.Entity
@model List<TblYazarlar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Yazar İşlemleri</h2>
<table class="table table-striped">
    <tr style="background-color:rgb(252,178,22)">
        <th>ID</th>
        <th>AD</th>
        <th>SOYAD</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>YAZARIN KİTAPLARI</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.AD</td>
            <td>@x.SOYAD</td>
            <td>@Html.ActionLink("Sil","yazarSil",new { id=x.ID},new { @class="btn btn-danger",onclick="return confirm('Yazarı Silmek İstiyor Musunuz?')"})</td>
            <td><a href="/Yazar/yazarGetir/@x.ID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Yazar/yazarKitaplar/@x.ID" class="btn btn-info">Yazarın Kitapları</a></td>
        </tr>
    }
</table>
<a href="/Yazar/yazarEkle/" class="btn btn-primary">Yeni Yazar Ekle</a>